# =============================================================================
# PROOFPLAY BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
HOST=localhost

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production-2024
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/proofplay
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/proofplay
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000,http://localhost:8081
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DELAY_AFTER=50
RATE_LIMIT_DELAY_MS=500

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production-2024
COOKIE_SECRET=your-cookie-secret-change-this-in-production-2024

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf
UPLOAD_PATH=uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=proofplay-uploads
AWS_S3_BUCKET_URL=https://proofplay-uploads.s3.amazonaws.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=ProofPlay <noreply@proofplay.com>
EMAIL_REPLY_TO=support@proofplay.com

# =============================================================================
# SOCIAL LOGIN API KEYS
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_CALLBACK_URL=http://localhost:3001/api/auth/apple/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# =============================================================================
# XION BLOCKCHAIN CONFIGURATION
# =============================================================================
XION_NETWORK_URL=https://xion-testnet.burnt.com
XION_CHAIN_ID=xion-testnet-1
XION_RPC_URL=https://xion-testnet-rpc.burnt.com
XION_REST_URL=https://xion-testnet-api.burnt.com
XION_FAUCET_URL=https://xion-testnet-faucet.burnt.com
XION_EXPLORER_URL=https://xion-testnet-explorer.burnt.com

# XION SDK Configuration
XION_SDK_VERSION=1.0.0
XION_CONTRACT_ADDRESS=xion1examplecontractaddress
XION_REWARD_CONTRACT=xion1rewardcontractaddress

# =============================================================================
# WALLET CONNECT
# =============================================================================
WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id
WALLET_CONNECT_METADATA_NAME=ProofPlay
WALLET_CONNECT_METADATA_DESCRIPTION=Complete challenges and earn rewards with XION
WALLET_CONNECT_METADATA_URL=https://proofplay.com
WALLET_CONNECT_METADATA_ICONS=https://proofplay.com/icon.png

# =============================================================================
# REDIS CACHE (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=ProofPlay-Backend

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# IP Geolocation
IPAPI_KEY=your-ipapi-key
IPAPI_URL=http://api.ipapi.com

# Email Validation
EMAIL_VERIFICATION_API_KEY=your-email-verification-key
EMAIL_VERIFICATION_URL=https://api.email-verification.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SOCIAL_LOGIN=true
ENABLE_WALLET_LOGIN=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
ENABLE_2FA=false
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
DEBUG=true
TEST_MODE=false
MOCK_DATA=true
SEED_DATA=true
LOG_REQUESTS=true
LOG_RESPONSES=false

# =============================================================================
# PRODUCTION OVERRIDES (Uncomment for production)
# =============================================================================
# NODE_ENV=production
# LOG_LEVEL=warn
# DEBUG=false
# MOCK_DATA=false
# ENABLE_RATE_LIMITING=true
# ENABLE_COMPRESSION=true
# ENABLE_CACHING=true 